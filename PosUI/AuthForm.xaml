<Window x:Class="PosUI.AuthForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PosUI"
        mc:Ignorable="d"
        Title="Авторизация" Height="142" Width="366">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="279*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <TextBlock HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left"  TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Text="{Binding User.Password, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Ok" Margin="10" Click="Button_Click"/>
            <Button Content="Отмена" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
